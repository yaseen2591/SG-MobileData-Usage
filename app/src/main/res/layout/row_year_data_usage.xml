<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/usage_year"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Year" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/quarter1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="1" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/quarter2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="2" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/quarter3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="3" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/quarter4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="4" />

    </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/total_usage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Total Consumption : 10 PB" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/low_usage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_multiline_chart" />


</LinearLayout>